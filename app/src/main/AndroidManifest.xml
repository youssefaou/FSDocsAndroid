        <activity
            android:name=".ui.login.StudentLoginActivity"
            android:theme="@style/FullScreenActivityStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.TeacherLoginActivity"
            android:theme="@style/FullScreenActivityStyle" />
        <activity
            android:name=".ui.signup.StudentSignupActivity"
            android:theme="@style/FullScreenActivityStyle" />
